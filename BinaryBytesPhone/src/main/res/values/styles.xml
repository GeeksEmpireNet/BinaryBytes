<resources>

    <style name="GeeksEmpire" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color</item>
        <item name="android:navigationBarColor">@color/default_color</item>
        <item name="android:statusBarColor">@color/default_color</item>

        <item name="android:actionBarStyle">@style/Theme.ActionBarStyle</item>
        <item name="android:actionBarSize">50dp</item>

        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/default_color</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Day" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/default_color</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:background">@color/light</item>
    </style>

</resources>
